{
    "name": "base-backend-ts",
    "version": "2.0.0",
    "description": "Template Node.js 20 LTS TypeScript â€“ Express 5, Zod, Pino, Jest",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/server.ts",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
        "test:unit": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
        "test:integration": "cross-env NODE_ENV=test jest --projects ./tests --runInBand --detectOpenHandles",
        "coverage": "cross-env NODE_ENV=test jest --coverage",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"**/*.{ts,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,json,md}\"",
        "depcheck": "npx depcheck --ignores=@types/*,eslint-*,prettier,husky,jest-cli,cross-env,eslint,jest,nodemon,ts-node,typescript",
        "db:migrate": "sequelize-cli db:migrate",
        "db:migrate:undo": "sequelize-cli db:migrate:undo",
        "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
        "db:seed": "sequelize-cli db:seed:all",
        "db:seed:undo": "sequelize-cli db:seed:undo",
        "db:seed:undo:all": "sequelize-cli db:seed:undo:all",
        "db:create": "sequelize-cli db:create",
        "db:drop": "sequelize-cli db:drop",
        "prepare": "husky install"
    },
    "author": "Henrique Hoinacki",
    "license": "MIT",
    "engines": {
        "node": ">=18.20.0 <20 || >=20.12.1"
    },
    "dependencies": {
        "axios": "^1.9.0",
        "bcrypt": "^5.1.1",
        "body-parser": "^2.2.0",
        "camelcase-keys": "^7.0.2",
        "compression": "^1.8.0",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "express-validation": "^4.1.1",
        "helmet": "^8.1.0",
        "hpp": "^0.2.3",
        "http-status": "^2.1.0",
        "i18n": "^0.15.1",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "pg": "^8.11.3",
        "pino": "^9.6.0",
        "pino-http": "^10.4.0",
        "sequelize": "^6.35.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/lodash": "^4.17.13",
        "@types/node": "^22.10.2",
        "@types/pg": "^8.11.10",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.18.1",
        "@typescript-eslint/parser": "^8.18.1",
        "cross-env": "^7.0.3",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.5.3",
        "sequelize-cli": "^6.6.2",
        "supertest": "^7.1.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2"
    },
    "lint-staged": {
        "*.{ts,json,md}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": ["<rootDir>/src", "<rootDir>/tests"],
        "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts"],
        "moduleFileExtensions": ["ts", "js", "json"]
    }
}

